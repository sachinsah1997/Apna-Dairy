<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".CustomerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft ="80dp"
                android:layout_marginTop ="15dp"
                android:text="Add New Customer"
                android:textColor="@color/colorAccent"
                android:textSize="25dp"
                android:textStyle="bold" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cname"
                android:layout_alignStart="@+id/cname"
                android:layout_marginBottom="-75dp"
                android:text="Customer Name"
                android:textColor="@color/colorAccent"
                android:layout_alignLeft="@+id/cname" />

            <EditText
                android:id="@+id/cname"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cnumber"
                android:layout_alignStart="@+id/cnumber"
                android:layout_marginBottom="-150dp"
                android:text="Phone Number"
                android:textColor="@color/colorAccent"
                android:layout_alignLeft="@+id/cnumber" />

            <EditText
                android:id="@+id/cnumber"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="155dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"/>
                
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/cnumber"
                android:layout_alignStart="@+id/cnumber"
                android:layout_marginBottom="-230dp"
                android:text="Salesman Associated"
                android:textColor="@color/colorAccent"
                android:layout_alignLeft="@+id/cnumber" />

            <EditText
                android:id="@+id/sassociated"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="235dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp" />

	    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/sassociated"
                android:layout_alignStart="@+id/sassociated"
                android:layout_marginBottom="-320dp"
                android:text="Area"
                android:textColor="@color/colorAccent"
                android:layout_alignLeft="@+id/sassociated" />

            <EditText
                android:id="@+id/area"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="325dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp" />

            <Button
                android:id="@+id/addCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="400dp"
                android:background="@color/colorAccent"
                android:text="Click here to add"
                android:textColor="#fff"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
