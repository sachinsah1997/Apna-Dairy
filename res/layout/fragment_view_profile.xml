<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:text="Your Profile"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:textStyle="bold" />

    <!--    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagev"
            android:layout_alignLeft="@+id/pnumberv"
            android:layout_marginLeft="255dp"
            android:text="Change"
            android:id="@+id/imagevedit"
            android:textColor="@color/colorAccent"
            />
-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pnamev"
            android:layout_alignStart="@+id/pnamev"
            android:layout_marginBottom="-85dp"
            android:text="Display Name"
            android:textColor="@color/colorAccent"
            android:layout_alignLeft="@+id/pnamev" />

        <EditText
            android:id="@+id/pnamev"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/edittext_background"
            android:padding="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pnumberv"
            android:layout_alignStart="@+id/pnumberv"
            android:layout_marginBottom="-160dp"
            android:text="Phone Number"
            android:textColor="@color/colorAccent"
            android:layout_alignLeft="@+id/pnumberv" />

        <EditText
            android:id="@+id/pnumberv"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="163dp"
            android:background="@drawable/edittext_background"
            android:editable="false"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pnumberv"
            android:layout_alignStart="@+id/pnumberv"
            android:layout_marginBottom="-242dp"
            android:text="Address"
            android:textColor="@color/colorAccent"
            android:layout_alignLeft="@+id/pnumberv" />

        <EditText
            android:id="@+id/paddressv"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:editable="false"
            android:layout_marginTop="243dp"
            android:background="@drawable/edittext_background"

            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/radioGroup1v"
            android:layout_alignStart="@+id/radioGroup1v"
            android:layout_marginBottom="-320dp"
            android:text="Gender"
            android:textColor="@color/colorAccent"
            android:layout_alignLeft="@+id/radioGroup1v" />


        <RadioGroup
            android:id="@+id/radioGroup1v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0v"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="male" />

            <RadioButton
                android:id="@+id/radio1v"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="female" />
        </RadioGroup>

        <Button
            android:id="@+id/updateprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Click to Update profile "
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="445dp"
            android:textColor="#fff"
            android:textStyle="bold"
            />


    </RelativeLayout>
